if RUBY_PLATFORM == 'java'
  mysql_gem = 'activerecord-jdbcmysql-adapter'
  mysql_vsn = '~>1.3.0'
else
  mysql_gem = 'mysql2'
end

boilerplate_gems = <<-BOILERPLATE
  gem 'rack'
BOILERPLATE

if RUBY_VERSION >= '2.2.2' && RUBY_PLATFORM == 'java' 
  mysql_vsn = '~>0.4.4'

  gemfile <<-RB
    gem 'activerecord', '5.2.2'
    gem 'minitest', '~> 5.2.3'
    gem 'activerecord-jdbcmysql-adapter', '~>52.0'
    #{boilerplate_gems}
  RB

  gemfile <<-RB
    gem 'activerecord', '~> 5.1.6'
    gem 'minitest', '~> 5.2.3'
    gem 'activerecord-jdbcmysql-adapter', '~>51.0'
    #{boilerplate_gems}
  RB

  gemfile <<-RB
    gem 'activerecord', '~> 5.0.0'
    gem 'minitest', '~> 5.2.3'
    gem 'activerecord-jdbcmysql-adapter', '~>50.0'
    #{boilerplate_gems}
  RB
end

if RUBY_VERSION >= '2.2.2' && RUBY_PLATFORM != 'java'
  mysql_vsn = '~>0.4.4'

  gemfile <<-RB
    gem 'activerecord', '5.2.2'
    gem 'minitest', '~> 5.2.3'
    gem '#{mysql_gem}', '#{mysql_vsn}'
    #{boilerplate_gems}
  RB

  gemfile <<-RB
    gem 'activerecord', '~> 5.1.6'
    gem 'minitest', '~> 5.2.3'
    gem '#{mysql_gem}', '#{mysql_vsn}'
    #{boilerplate_gems}
  RB

  gemfile <<-RB
    gem 'activerecord', '~> 5.0.0'
    gem 'minitest', '~> 5.2.3'
    gem '#{mysql_gem}', '#{mysql_vsn}'
    #{boilerplate_gems}
  RB
end

if RUBY_VERSION < '2.4.0'
  mysql_vsn = '0.3.20' unless RUBY_PLATFORM == 'java'

  gemfile <<-RB
    gem 'activerecord', '~> 4.2.0'
    gem 'minitest', '~> 5.2.3'
    gem '#{mysql_gem}', '#{mysql_vsn}'
    #{boilerplate_gems}
  RB

  gemfile <<-RB
    gem 'activerecord', '~> 4.1.6'
    gem 'minitest', '~> 5.2.3'
    gem '#{mysql_gem}', '#{mysql_vsn}'
    #{boilerplate_gems}
  RB

  gemfile <<-RB
    gem 'activerecord', '~> 4.0.11'
    gem '#{mysql_gem}', '#{mysql_vsn}'
    #{boilerplate_gems}
  RB
end

# AR 3.x does not have official support for Ruby 2.2, and there are several
# known issues, including https://github.com/rails/rails/issues/18991, so
# skip 3.x versions on 2.2.
#
if RUBY_VERSION < '2.2.0'
  mysql_vsn = '0.3.20' unless RUBY_PLATFORM == 'java'

  gemfile <<-RB
    gem 'activerecord', '~> 3.2.19'
    gem '#{mysql_gem}', '#{mysql_vsn}'
    #{boilerplate_gems}
  RB

  gemfile <<-RB
    gem 'activerecord', '~> 3.1.12'
    gem '#{mysql_gem}', '#{mysql_vsn}'
    #{boilerplate_gems}
  RB

  gemfile <<-RB
    gem 'activerecord', '~> 3.0.20'
    gem 'activerecord-mysql2-adapter' if RUBY_PLATFORM != 'java'
    gem '#{mysql_gem}', '#{mysql_vsn}'
    #{boilerplate_gems}
  RB
end

# vim: ft=ruby
